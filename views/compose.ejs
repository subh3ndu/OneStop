<%- include("partials/header");-%>
<h1 class="form-label">Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="title"> Title</label>
        <input
            class="form-control"
            type="text"
            name="postTitle"
            autocomplete="off"
        />
    </div>
    <div class="form-group">
        <label class="form-label" for="body">Details</label>
        <textarea
            class="form-control"
            name="postBody"
            cols="40"
            rows="5"
        ></textarea>
    </div>
    <div class="form-group">
        <label class="form-label" for="datentime">Date & Time</label>
        <input
            class="form-control"
            type="text"
            name="postDate"
            autocomplete="off"
        />
    </div>
    <div class="form-group">
        <label class="form-label" for="link">Link</label>
        <input
            class="form-control"
            type="text"
            name="postLink"
            autocomplete="off"
        />
    </div>

    <button class="btn btn-primary" type="submit" name="btn">Publish</button>
</form>

<%- include("partials/footer");-%>
